#! /usr/bin/env nix-shell
#! nix-shell --pure --quiet -i bash ../nix/ci.nix

set -e

echo "#"
echo "# Verifying glpk-headers-haskell.nix is up to date..."
echo "#"
cabal2nix . | diff glpk-headers-haskell.nix -
echo ""

echo "#"
echo "# Running tests..."
echo "#"
cabal test --test-show-details=streaming --test-options='--color=always' "$@"